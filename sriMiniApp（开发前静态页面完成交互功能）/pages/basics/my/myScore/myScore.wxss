.myscore-img{
  width: 100%;
  height:323rpx;
}
.myscore-message{
  position: absolute;
  top:105rpx;
  left:310rpx;
  text-align: center;
  width: 130rpx;
  color:white;
}
.myscore-message text:nth-child(1){
  display: block;
  width: 100%;
}
.myscore-message text:nth-child(2){
   width: 100%;
  font-size:46rpx;
  font-weight: 500;
} 
.myscore-container{
  position: relative;
  top:-11rpx;
  padding: 20rpx;
}
.myscore-first{
  display: flex;
  height: 74rpx;
  font-size: 32rpx;
  line-height: 74rpx;
  background: white;
  color:#404040;
  border-top-left-radius:15rpx;
   border-top-right-radius:15rpx;
   border-bottom:1rpx solid #e6e6e6;
}
.myscore-firsttext{
  margin-left:23rpx;
  color:#eeb42e;
}
.myscore-secondtext{
   margin-left:14rpx;
}
.pic-img{
  width:17rpx;
  height:33rpx;
  transform:rotate(90deg);
  position:absolute;
  top:25rpx;
  left:149rpx;
}
.pic-text{
  color:#b4b4b4;
}
.myscore-first picker{
  position: absolute;
  right:84rpx;
}
.myscore-item{
  padding-top:5rpx;
  padding-bottom:4rpx;
  background: white;
  display: flex;
  justify-content: space-between;
   align-items: center; 
  height: 87rpx;
  border-bottom:1rpx solid #e6e6e6;
}
.myscore-item view:nth-child(1){
  margin-left:45rpx;
  font-size: 30rpx;
  color: #454545;
}
.myscore-item view:nth-child(1) view{
  margin-left:0rpx;
}
.myscore-item view:nth-child(1) text{
  color:#afafaf;
}
.myscore-item view:nth-child(2){
  margin-right:45rpx;
  height: 50%;
  font-size: 30rpx;
  color: #ecbc36;
}
.myscore-item:last-child{
   border-bottom-left-radius:15rpx;
   border-bottom-right-radius:15rpx;
   border-bottom:0rpx solid #e6e6e6;
}
