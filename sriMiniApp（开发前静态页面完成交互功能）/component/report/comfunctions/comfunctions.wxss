@import "../../../pages/common/index.wxss";
/* component/report/comfunctions/comfunctions.wxss */
.controlImg {
  margin-top: 40rpx;
  width: 72rpx;
  height: 72rpx;
}

.controlText {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 28rpx;
  color: #303030;
}

.navigator {
  width: 33.33%;
  padding: 0rpx;
  height: 200rpx;
  text-align: center;
}

.kind-list-top {
  position: relative;
  background: white;
  height: 100rpx;
  line-height: 100rpx;
  color: #313131;
  font-size: 35rpx;
  text-align: center;
}

.kind-list-top-item {
  position: absolute;
  display: inline-block;
}

.kind-list-top-item:nth-child(1) {
  top: 42rpx;
  left: 34%;
  width: 14rpx;
  height: 14rpx;
  background: yellow;
  border-radius: 10rpx;
  background: #3b6ddc;
}

.kind-list-top-item:nth-child(2) {
  top: 44rpx;
  left: 35%;
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  border: 1px solid #060412;
}

.kind-list-top-item:nth-child(3) {
  top: 46rpx;
  left: 20%;
  width: 84rpx;
  height: 3rpx;
  border-radius: 9rpx;
  background: #96adfb;
}

.kind-list-top-item:nth-child(4) {
  top: 42rpx;
  right: 34%;
  width: 14rpx;
  height: 14rpx;
  background: yellow;
  border-radius: 10rpx;
  background: #3b6ddc;
}

.kind-list-top-item:nth-child(5) {
  top: 44rpx;
  right: 35%;
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  border: 1px solid #060412;
}

.kind-list-top-item:nth-child(6) {
  top: 46rpx;
  right: 20%;
  width: 84rpx;
  height: 3rpx;
  border-radius: 9rpx;
  background: #96adfb;
}

.kind-list-bottom {
  display: flex;
  flex-wrap: wrap;
  background: white;
}

.navigator:before {
  border-top: 0rpx solid #d8d8d8;
}

.kind-list-bottom-item {
  width: 100%;
  height: 200rpx;
}