/**
*  整体页面
*/

.page-section {
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0rpx 0rpx 0rpx 30rpx;
  box-sizing: border-box;
}

/**
*  input框
*/
.index-desc {
  display: flex;
  border-bottom: 1rpx solid #ededed;
  width: 100%;
  height: 100rpx;
}

/**
*  input框的标题
*/

.view-same {
  width: 30%;
  line-height: 100rpx;
}

/**
*  input框的内容
*/
.details-text {
  margin-top: 25rpx;
}

/**
*  input框中的图片展示
*/

.index-desc:nth-child(11) {
  display: flex;
  flex-wrap: wrap;
  height: 540rpx;
  border: 0rpx solid red;
}

/**
*  图片信息的样式
*/

.view-zone {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: white;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item_H {
  position: relative;
  display: inline-block;
  margin-right: 20rpx;
  width: 178rpx;
  height: 178rpx;
}
.demo-text-1 {
  position: relative;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
}

.demo-text-1:before {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.yinhuanshangbao-image {
  width: 178rpx;
  height: 178rpx;
  border-radius: 5rpx;
}