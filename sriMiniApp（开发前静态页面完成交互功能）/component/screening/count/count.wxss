/* 页面的主题样式  */

/* count-container 部分 */

.count-container {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.count-img {
  width: 100%;
  height: 100%;
}
.count-left{
  position: absolute;
  left:65rpx;
  top:65rpx;
  width: 190rpx;
}
.count-left text:nth-child(1){
  display: block;
  text-align: center;
  color:#fff9cd;
  width: 190rpx;
  font-size:29rpx;
  line-height: 45rpx;
}
.count-left text:nth-child(2){
  display:block;
  width:140rpx;
  height:140rpx;
  line-height:140rpx;
  text-align:center;
  border:20rpx solid rgba(250, 250, 250, .1);
  border-radius:140rpx;
  margin-left:3px;
  font-size:34rpx;
  color:#fff9cd;
  font-weight: 500;
}
.count-right-top{
  position: absolute;
  right:65rpx;
  top:22rpx;
  color:#fff9cd;
  width: 190rpx;
}
.count-right-top text{
  display: block;
  text-align: center;
  color:#fff9cd;
  width: 210rpx;
  font-size:29rpx;
  line-height: 45rpx;
}
 .count-right-top text:nth-child(2){
   margin-top:5rpx; 
  font-size:34rpx;
  font-weight: 500;
} 
.count-right-bottom{
  position: absolute;
  right:65rpx;
  top:195rpx;
  width: 190rpx;
  height: 85rpx;
}
.count-right-bottom text{
  display: block;
  text-align: center;
  color:#fff9cd;
  width: 210rpx;
  font-size:29rpx;
  line-height: 45rpx;
}
.count-right-bottom text:nth-child(2){
  margin-top:5rpx; 
  font-size:34rpx;
  font-weight: 500;
} 



/* count-container-bottom 部分 */

.count-container-bottom {
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background: #f0f3f8;
}

.count-container-bTop {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  background: white;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.count-container-bTop view {
  margin-left: 20rpx;
  color: #6d87f8;
  font-size: 34rpx;
}

.count-container-bTop text {
  margin-left: 20rpx;
  color: #4c4c4c;
  font-size: 34rpx;
}

.count-container-bMiddle {
  height: 260rpx;
  background: white;
  border-bottom: 1rpx solid #e7e7e7;
}

.count-container-bMiddle .top {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}


.count-container-bMiddle .top image {
  height: 38rpx;
  width: 34rpx;
  margin-top: 23rpx;
  margin-left: 19rpx;
}

.count-container-bMiddle .top text {
  width: 300rpx;
  margin-left: 19rpx;
  font-size: 32rpx;
  color: #2f2f2f;
}

.count-container-bMiddle .bottom {
  display: flex;
  height: 180rpx;
}

.count-container-bMiddle .bottom view {
  width: 50%;
  height: 100%;
}

.count-container-bMiddle .bottom view view {
  display: flex;
  align-items: center;
  width: 90%;
  height: 33.33%;
  padding-left: 15%;
}

.count-container-bMiddle .bottom view view image {
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
}
.count-container-bMiddle .bottom view view:nth-child(1) image {
  height: 40rpx;
  width: 40rpx;
}
.count-container-bMiddle .bottom view view:nth-child(2) image {
 height:50rpx;
 width:35rpx;
}
.count-container-bMiddle .bottom view view:nth-child(3) image {
 height:32rpx;
 width:35rpx;
}
.count-container-bMiddle .bottom view:nth-child(2) view:nth-child(1) image {
  height:27rpx;
  width:39rpx;
}
.count-container-bMiddle .bottom view:nth-child(2) view:nth-child(2) image {
 height:40rpx;
 width:37rpx;
}
.count-container-bMiddle .bottom view:nth-child(2) view:nth-child(3) image {
 height:36rpx;
 width:36rpx;
}

.count-container-bMiddle .bottom view view image {
  color: #969696;
}

/* 统计列表 */

.newreport {
  margin-top: 80rpx;
}

/* 下拉菜单 */

.choice-bar {
  position: fixed;
  top: 0;
  display: flex;
  width: 100vw;
  font-size: 16px;
  background-color: #fff;
  z-index: 12000;
}

.chioce-item {
  background-color: #33a6e7;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  width: 50%;
  height: 80rpx;
  /*border-right: 1rpx solid #ddd;*/
}

.chioce-item-text {
  width: 170rpx;
  color: #dfdfef;
  overflow: hidden;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chioce-item-text-selected {
  width: 170rpx;
  color: white;
  overflow: hidden;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chioce-item-last {
  border-right: none;
}

.chioce-item-first {
  border-left: none;
}

.icon-chioce {
  height: 18rpx;
  width: 33rpx;
}

.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: #000;
  opacity: 0.5;
  z-index: 2000;
}

.time-list, .proj-list, .state-list {
  margin-top: 2rpx;
  position: absolute;
  top: 80rpx;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: -1;
  font-size: 14px;
  border-bottom: 1rpx solid #ddd;
}

.chioce-list-show {
  top: 80rpx;
  animation: slide 500ms;
}

@keyframes slide {
  0% {
    top: -500rpx;
  }

  100% {
    top: 80rpx;
  }
}

.chioce-list-hide {
  display: none !important;
}

/* 工程拆分 */

.proj-list {
  display: flex;
}

.proj-left {
  width: 30%;
  flex-grow: 1;
}

.proj-right {
  width: 70%;
  flex-grow: 4;
}

.scroll-proj {
  height: 500rpx;
}

.proj-parent {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
  background-color: #CCE8FF;
}

.proj-parent-active {
  background-color: #fff;
}

.proj-children {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
}

/* 时间拆分 */

.time-item {
  height: 280rpx;
}

.time-text {
  height: 64rpx;
  padding-left: 20rpx;
  line-height: 64rpx;
}

.time-container {
  display: flex;
  height: 100rpx;
}

.time-start {
  width: 36%;
  margin-left: 4%;
  height: 60rpx;
}

.time-center {
  width: 16%;
  height: 2rpx;
  background: #d7d7d7;
  margin-left: 2%;
  margin-right: 2%;
  margin-top: 30rpx;
}

.time-end {
  width: 36%;
  height: 60rpx;
}

.time-end view {
  width: 100%;
  height: 60rpx;
  background: #f6f6f6;
  text-align: center;
  border-radius: 26rpx;
  line-height: 60rpx;
}

.time-start view {
  width: 100%;
  height: 60rpx;
  background: #f6f6f6;
  border-radius: 26rpx;
  text-align: center;
  line-height: 60rpx;
}

/*筛选*/

.state-item {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.icon-selected {
  height: 30rpx;
  width: 30rpx;
}

.state-footer {
  display: flex;
  justify-content: space-between;
}

.state-footer button {
  margin: 20rpx 80rpx;
  border-radius: 0 !important;
}

.button-reset {
  border: 1rpx solid #ddd !important;
  color: #666 !important;
}

/* 提交时间按钮 */

.page-body-button {
  display: inline-block;
  width: 44%;
  height: 80rpx;
  margin-left: 4%;
  border-radius: 5rpx;
  background: #5387ff;
  color: white;
  line-height: 80rpx;
}
